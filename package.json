{
  "name": "hacker-news",
  "version": "1.0.0",
  "description": "A hacker new clone made for learning",
  "main": "server.js",
  "engines": {
    "node": "12.13.1"
  },
  "scripts": {
    "test": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:cov": "jest --updateSnapshot --coverage",
    "lint": "eslint ./components/** ./pages/** -c .eslintrc.json --fix --ext js,jsx",
    "test:all": "npm run lint && npm run test:cov",
    "dev": "node server.js",
    "start": "NODE_ENV=production node server.js",
    "build": "next build",
    "heroku-postbuild": "next build && npm run lint && npm run test:cov"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.4.1",
    "isomorphic-fetch": "^2.2.1",
    "moment": "^2.25.2",
    "next": "^11.1.3",
    "nextjs-progressbar": "0.0.5",
    "react": "^16.13.1",
    "react-bootstrap": "^1.0.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^24.5.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.0",
    "jest": "^24.5.0",
    "nock": "^12.0.3",
    "prettier": "^2.0.5",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^16.8.4"
